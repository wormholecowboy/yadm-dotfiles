# Basic Settings
set hidden true
set ignorecase true
set icons true
set relativenumber
set drawbox

# Custom Functions

cmd move-parent &{{
    dironly="setlocal '$(dirname "$PWD")' dironly"
    lf -remote "send $id :updir; $dironly true; $1; $dironly false; open"
}}
map J move-parent down
map K move-parent up

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  touch $ans
  # $EDITOR $ans
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

Z
cmd z-jump ${{
  # ZLUA_SCRIPT="~/z/z.lua"  # Usually unnecessary
  lf -remote "send ${id} cd \"$($ZLUA_SCRIPT -e $@ | sed 's/\\/\\\\/g;s/"/\\"/g')\""
}}

map Z push :z-jump<space>-I<space>
map zb push :z-jump<space>-b<space>
map zz push :z-jump<space>



# Bindings
map d
map m

map . set hidden!
map p paste
map ddd delete
map a select-all
map x cut
map y copy
map C clear
map R reload
map <enter> open
map mf mkfile
map md mkdir
map au unarchive
map af select-files
map ad select-dirs


# Movement
map gdt cd ~/Desktop
map gdb cd ~/Dropbox
map gc cd ~/.config
map gm cd ~/myc
map gb cd /usr/local/bin
map gtr cd ~/.Trash
map gte cd ~/temp











